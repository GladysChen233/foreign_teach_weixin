/* pages/courseDetails/courseDetails.wxss */
.navbar{
  width: 100vw;
  position: fixed;
  top: 0;
  z-index: 5;
  transition: color .4s;
}

.capsule-box{
  position: absolute;
  width: 100vw;
  display: flex;
}

.backButton{
  display: flex;
  margin-left: 15px;
  align-items: center;
  justify-content: center;
}

.capsule-box .title{
  display: flex;
  justify-content: center;
  font-weight: bold;
}

.body{
  width: 100vw;
  background-color: rgb(248,251,254);
}

.banner{
  filter: alpha(opacity=80);
  opacity: .8; 
}

.bannerbk{
  background: #000;
}

.body .head{
  padding: 15px;
  background: #fff;
}

.head .cost{
  color: rgb(212,52,36);
  font-weight: bold;
}

.head .cost text{
  font-size: 24px;
  font-weight: bold;
  color: rgb(212,52,36)
}

.head .title{
  font-size: 17px;
  margin-top: 2px;
  font-weight: bold;
}

.case{
  display: flex;
  margin-top: 5px;
}

.case .tag{
  margin-right: 10px;
  background-color: rgb(233,236,239);
  border-radius: 50px;
  padding: 2px 10px;
  display: flex;
  align-items: center;
}

.tag van-icon{
  margin-right: 3px;
  color: rgb(112,115,118)
}

.tag text{
  font-size: 11px;
  color: rgb(112,115,118);
  font-weight: bold;
}

.body .content{
  margin-top: 15px;
  background-color: #fff;
}

.tab{
  padding:12px 0 8px 0;
}

.tabTip{
  position: fixed;
  /* border-bottom: 1px solid #333; */
  width: 100vw;
  box-shadow: 0 0 5px 0 #a7a7a7;
  transition: box-shadow .3s;
}

.tabContent{
  height: 900px;
  padding: 0 15px;
}

