.wrapper{
  display: flex;
  width: 100vw;
  height: 100vh;
  align-items: center;
  justify-content: center;
}

.postLoad .cont{
  width: 100px;
  height: 100px;
  background-color: white;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
}

.cont text{
  font-size: 14px;
  color: #777;
}