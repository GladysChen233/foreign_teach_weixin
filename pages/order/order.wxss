/* pages/order/order.wxss */
.body{
  width: 100%;
  background-color: #F1F2F3;
  overflow-y: auto;
}

page{
  width: 100vw;
  height: 100vh;
}

.loadWidget{
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.courseUnit{
  background-color: white;
  border-radius: 5px;
  margin: 0 10px;
  margin-bottom: 10px;
}

.courseInfo{
  padding: 5px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.courseInfo image{
  width: 100px;
  height: 100px;
}