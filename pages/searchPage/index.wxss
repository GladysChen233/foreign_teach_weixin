/* pages/searchPage/index.wxss */
.navbar{
  width: 100vw;
  position: fixed;
  top: 0;
  z-index: 5;
  transition: color .4s;
}

.capsule-box{
  position: absolute;
  width: 100vw;
  display: flex;
}

.backButton{
  display: flex;
  margin-left: 15px;
  align-items: center;
  justify-content: center;
}

.capsule-box .title{
  display: flex;
  justify-content: center;
  font-weight: bold;
}

.body{
  width: 100vw;
  background-color: rgb(248,251,254);
  position: fixed;
  overflow-y: auto;
}

.courseItem{
  margin: 15px 10px;
  margin-top: 0;
  margin-bottom: 25px;
}

.courseItem .img{
  background-color: #f2f2f2;
  border-radius: 5px;
}

.courseItem{
  display: flex;
}

.courseItem .text{
  margin-left: 10px;
}

.text .title{
  color: #323232!important;
  font-weight: bold;
  font-size: 28rpx;
  max-lines: 2;
}

.courseItem .case{
  display: flex;
  color: #9B9B9B;
  align-items: center;
  margin-top: 3px;

}

.text text{
  color: #9B9B9B;
  font-weight: 400;
  font-size: 25rpx;
}

.ccount{
  padding-left: 15px
}

.pcount{
  display: flex;
}

.pcount text{
  padding-left: 5px;
}

.cost text{
  color: #E1342C;
  font-size: 28rpx;
}

