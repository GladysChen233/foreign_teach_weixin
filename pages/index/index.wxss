/**index.wxss**/
.container{
  height: 500rpx;
  display: flex;
}

.pageContainer{
  font-size: 14rpx;
  color: #000;
}

/*banner*/
.bannerbox{
  height: 400rpx;
  width:750rpx;
  position: relative;
}
.banner{
  flex-direction:row;
  align-items:center;
}
.bannerimg{
  width:750rpx;
  height: 400rpx;
  display: none;
}
.banner .active{
  width:750rpx;
  height: 400rpx;
  display: inline-block;
}
.banner-btn{
  width:100%;
  position: absolute;
  bottom:20rpx;
  flex-direction:row;
  justify-content:center;
}
.banner-btn view{
  width:20rpx;
  height: 20rpx;
  margin: 10rpx;
  background-color: rgba(255,255,255,0.4);
  border-radius: 50%;
}
.banner-btn  .active{
  background-color: #FFF;
}

/*nav*/
.nav{
 flex-wrap:wrap;
 justify-content:center;
}
.nav-item{
  margin: 30rpx 50rpx 10rpx;
  width:80rpx;
}
.nav-item image{
  width:80rpx;
  height: 80rpx;
  border-radius:50%;
}
.nav-item text{
  width:80rpx;
  font-size: 16rpx;
  color:#000;
  display: inline-block;
  text-align: center;
}

/*courseGrp*/
.course-grp {
  flex-wrap:wrap;
  justify-content: space-around;
}
.course-grp-name{
  width: 750rpx;
  height: 50rpx;
  justify-content:space-between;
  align-items:center;
  background-color: rgba(217, 217, 217, 0.2)
}
.course-grp-name text{
  font-size: 30rpx;
  line-height: 50rpx;
  color: #000 ;
  padding-left: 30rpx;
  background:url("../../images/section_title_tip.png") left no-repeat;
}
.course-grp-name navigator{
  font-size: 24rpx;
  color: rgba(217, 217, 217, 0.8);
  padding-right: 20rpx;
}

.course-grp-item navigator{
  width:340rpx;
}
.course-grp-item text{
  margin: 20rpx 0;
  color:#000;
  font-size: 30rpx;
}
.course-grp-item wx-text:last-child{
  margin-top: 0;
  color:red;
  font-size: 24rpx;
}
/*更多课程*/
.navigator-course{
  padding: 10rpx 0 40rpx;
  color:#4bbc93;
  font-size: 24rpx;
}

.capsule-box{
  position: absolute;
  width: 100vw;
}

.searchInput{
  background-color: white;
  border-radius: 50px;
  float: right;
  display: flex;
  align-self: center;
  border: .2rpx solid rgba(231,231,231,.7);
}

.searchInput text{
  color: rgba(0,0,0,.4);
  font-size: 26rpx;
}

.nbar{
  position: relative;
  top: 0;
  background-color: white;
  /* z-index: 2; */
  width: 100vw;
}

.position_button{
  margin-left: 20px;
  width: 60px;
  float: left;
}

.position_button text{
  font-size: 33rpx;
  font-weight: bold;
  padding-right: 10rpx;
}

.navShadow{
  box-shadow: 0 0 7px 0 #a7a7a7;
}

.swiper{
  height: 350rpx;
  width: 100%;
}

.banner_image{
  width: 100%;
  height: 100%;
}

.tabs{
  width: 100vw;
  position: relative;
}

.navbar{
  width: 100vw;
  position: fixed;
  top: 0;
  z-index: 6;
  background-color: white;
}

.van-tabs__wrap,
.van-tabs__wrap scroll-view,
.van-tabs__nav,
.van-tab {
  height: 30px!important;   
  background-color: white;
  color: #333!important;
}

.van-tab{
  padding: 0 10px!important;
}

.van-sticky{
  display: flex;
  padding-left: 10px;
}

.swiper-block{
  margin: 20rpx 15px;
  border-radius: 5px;
  box-shadow: 10rpx 10rpx 15rpx 0 rgba(0,0,0,.2);
  overflow: hidden;
}

.course_list{
  margin: 20rpx 15px;
  margin-top: 40rpx;
}

.course_list_title{
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.course_list_list{
  margin-top: 20rpx;
}


